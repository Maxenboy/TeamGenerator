@font-face {
  font-family: Resultfont;
  src: url(<%= asset_path('font/Assassin.ttf') %>);
}
@font-face {
  font-family: Writefont;
  src: url(<%= asset_path('font/1942.ttf') %>);
}
body {
  background: url(<%= asset_path('skulls.png') %>) fixed;
}

.row {
  background-color: rgba(255,255,255,.6);
}


header img {
  max-width: 15%;
  max-height: 15%;
}

#genderwrapper {
  width: 100%;
  overflow: hidden;
  table-layout: fixed;
}

#genderwrapper div {
  display: table-cell;
  width: 472px;
  vertical-align: middle
}

textarea {
  width: 100%;
  resize: none;
  font-family: Writefont;
  font-size: 26px;
}

#result {
  font-family: Resultfont;
  li {
    font-size: 22px;
  }
}

.hidden {
  display: none;
}

h1 {
  position: relative;
  border-color: #eee;
  border-style: solid;
  background: #fff;
  margin: 0 0 0px -15px;
  padding: 5px 15px;
}

.team-generator {
  margin-top: 20px;
}

.team-generator-logo {
  text-align: center;
}

footer {
  text-align: center;
  margin-top: 20px 0;
}
